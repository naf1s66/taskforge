                          ],
                          "createdAt": "2024-06-01T12:00:00.000Z",
                          "updatedAt": "2024-06-03T09:30:00.000Z"
                        }
                      ],
                      "page": 1,
                      "pageSize": 20,
                      "total": 2
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "unauthorized": {
                    "value": {
                      "error": "Unauthorized"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Tasks"
        ],
        "summary": "Create a task",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
